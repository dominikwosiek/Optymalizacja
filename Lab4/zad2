A = ([-1, 1], [1, 0], [0,1])
b = (1, 3, 2)
c = (1, 1)
P = InteractiveLPProblemStandardForm(A, b, c, ["x1", "x2"])
show(P)
D = P.initial_dictionary()
show(D)

print D.possible_entering()
D.enter("x1")
print D.possible_leaving()
D.leave("x4")
show(D)
D.update()
show(D)
print D.possible_entering()
D.enter("x2")
print D.possible_leaving()
D.leave("x5")
show(D)
D.update()
show(D)
P.plot()
